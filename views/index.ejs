<!DOCTYPE html>
<html ng-app="myroutesApp">
<head>
	<meta charset="utf-8">
	<title>Myroutes</title>
	<link rel="stylesheet" type="text/css" href="/stylesheets/bootstrap3/css/bootstrap.min.css">
	<link rel="stylesheet" type="text/css" href="/stylesheets/mystyles.css">
	<script src="/javascripts/angular-1.3.10.min.js"></script>
	<script src="/javascripts/myapp.js"></script>

</head>
<body ng-controller="MainCtrl">
	<div class="container">
		<div class="row text-center">
			<div class="col-xs-12">
				<h1><span class="label">{{header}}</span><small><i>{{subHeader}}</i></small></h1>
			</div>
		</div>
		<div class="row">
			<div class="col-xs-12" id="dvDistance" style="margin-bottom: 15px;"></div>
		</div>
		<div class="row" ng-init="loadScript()">
			<div class="col-xs-12" id="map"></div>
		</div>
		<div class="row text-center" ng-show="locationsLen>1" class="ng-hide">
			<div class="col-xs-12">
				<button class="btn btn-primary btn-lg" style="margin-top: 15px;" ng-click="getRoute()">Finish</button>
			</div>
		</div>
	</div>
</body>
</html>